<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FAFAFA">

        <!-- 标题栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:elevation="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="报警详情"
                android:textSize="20sp"
                android:textColor="#212121"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未处理"
                android:textSize="13sp"
                android:textColor="#FF5252"
                android:background="@drawable/bg_status_unprocessed"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp" />

        </LinearLayout>

        <!-- 报警图片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                android:src="@drawable/placeholder"
                android:contentDescription="报警图片" />

        </androidx.cardview.widget.CardView>

        <!-- 基本信息卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="基本信息"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- 报警ID -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="报警ID:"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvAlarmId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="001"
                        android:textSize="14sp"
                        android:textColor="#212121" />

                </LinearLayout>

                <!-- 报警类型 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="报警类型:"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvAlarmType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="人员检测"
                        android:textSize="14sp"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- 设备名称 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="设备名称:"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvDeviceName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="摄像头 #001"
                        android:textSize="14sp"
                        android:textColor="#212121" />

                </LinearLayout>

                <!-- 场景 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="场景:"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvScene"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="主井运输巷"
                        android:textSize="14sp"
                        android:textColor="#212121" />

                </LinearLayout>

                <!-- 区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="区域:"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvArea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="东区"
                        android:textSize="14sp"
                        android:textColor="#212121" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 时间信息卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="时间信息"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- 报警时间 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="报警时间:"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvOccurTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2024-10-17 15:30:25"
                        android:textSize="14sp"
                        android:textColor="#D32F2F" />

                </LinearLayout>

                <!-- 处理时间 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="处理时间:"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvProcessTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2024-10-17 16:00:00"
                        android:textSize="14sp"
                        android:textColor="#4CAF50"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 责任信息卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="责任信息"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- 责任人 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="责任人:"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvResponsiblePerson"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="张三"
                        android:textSize="14sp"
                        android:textColor="#212121"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- 责任单位 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="责任单位:"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvResponsibleUnit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="机电队"
                        android:textSize="14sp"
                        android:textColor="#212121"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 处理信息卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="处理信息"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- 已显示的处理信息 -->
                <TextView
                    android:id="@+id/tvProcessInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="已处理完成，设备运行正常"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:background="#F5F5F5"
                    android:padding="12dp"
                    android:visibility="gone" />

                <!-- 输入处理信息 -->
                <EditText
                    android:id="@+id/etProcessInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入处理信息..."
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:textColorHint="#9E9E9E"
                    android:background="@android:color/white"
                    android:padding="12dp"
                    android:minHeight="100dp"
                    android:gravity="top"
                    android:visibility="gone" />

                <!-- 处理人 -->
                <TextView
                    android:id="@+id/tvProcessUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="处理人: 张三"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 按钮区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="2dp">

            <Button
                android:id="@+id/btnViewVideo"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="查看视频"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_secondary"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="保存处理信息"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_primary" />

            <Button
                android:id="@+id/btnExport"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="导出图片"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_secondary" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="关闭"
                android:textSize="14sp"
                android:textColor="#757575"
                android:background="@drawable/bg_button_outline" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
