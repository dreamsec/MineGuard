<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/white"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- 左侧状态指示条 -->
        <View
            android:id="@+id/viewStatusIndicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="#FF5252"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 报警图片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvImageContainer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintStart_toEndOf="@id/viewStatusIndicator"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery"
                android:contentDescription="报警图片" />
        </androidx.cardview.widget.CardView>

        <!-- 状态徽章 -->
        <TextView
            android:id="@+id/tvStatusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_status_badge"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="未处理"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 报警类型标题 -->
        <TextView
            android:id="@+id/tvAlarmType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="人员入侵检测"
            android:textColor="#212121"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/tvStatusBadge"
            app:layout_constraintStart_toEndOf="@id/cvImageContainer"
            app:layout_constraintTop_toTopOf="@id/cvImageContainer" />

        <!-- 设备名称 -->
        <TextView
            android:id="@+id/tvDeviceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableStart="@android:drawable/ic_menu_camera"
            android:drawablePadding="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="设备 #001"
            android:textColor="#616161"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvAlarmType"
            app:layout_constraintTop_toBottomOf="@id/tvAlarmType" />

        <!-- 场景和区域信息 -->
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableStart="@android:drawable/ic_menu_mylocation"
            android:drawablePadding="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="主井运输巷 - 东区"
            android:textColor="#757575"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/tvDeviceName"
            app:layout_constraintStart_toStartOf="@id/tvAlarmType"
            app:layout_constraintTop_toBottomOf="@id/tvDeviceName" />

        <!-- 报警时间 -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:drawableStart="@android:drawable/ic_menu_recent_history"
            android:drawablePadding="4dp"
            android:text="2024-10-17 15:30:25"
            android:textColor="#9E9E9E"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@id/tvLocation"
            app:layout_constraintStart_toStartOf="@id/tvAlarmType"
            app:layout_constraintTop_toBottomOf="@id/tvLocation"
            app:layout_constraintBottom_toBottomOf="@id/cvImageContainer" />

        <!-- 分隔线 -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#EEEEEE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvAlarmType"
            app:layout_constraintTop_toBottomOf="@id/cvImageContainer" />

        <!-- 底部信息栏 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvAlarmType"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <!-- 处理人信息（如果有） -->
            <TextView
                android:id="@+id/tvProcessUser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@android:drawable/ic_menu_info_details"
                android:drawablePadding="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="待处理"
                android:textColor="#FF9800"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />

            <!-- 视频图标（如果有视频） -->
            <ImageView
                android:id="@+id/ivVideoIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:src="@android:drawable/ic_menu_upload"
                android:contentDescription="有视频"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
