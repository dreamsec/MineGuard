<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_xs"
    app:cardCornerRadius="@dimen/corner_radius_md"
    app:cardElevation="@dimen/card_elevation_xs"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_md">

        <!-- 级别指示器 -->
        <View
            android:id="@+id/levelIndicator"
            android:layout_width="@dimen/level_indicator_width"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/margin_sm"
            android:background="@color/warning_500"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 图片 -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/alarm_image_size"
            android:layout_height="@dimen/alarm_image_size"
            android:layout_marginEnd="@dimen/margin_md"
            android:scaleType="centerCrop"
            android:background="@color/neutral_200"
            android:src="@drawable/placeholder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/levelIndicator"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- 信息区域 -->
        <LinearLayout
            android:id="@+id/info_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- 第一行：级别和状态 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="警告"
                    android:textSize="@dimen/text_size_xs"
                    android:textColor="@color/warning_600"
                    android:background="@drawable/bg_level_warning"
                    android:paddingHorizontal="@dimen/padding_sm"
                    android:paddingVertical="@dimen/spacing_xs" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未处理"
                    android:textSize="@dimen/text_size_xs"
                    android:textColor="@color/error_600"
                    android:background="@drawable/bg_status_unprocessed"
                    android:paddingHorizontal="@dimen/padding_sm"
                    android:paddingVertical="@dimen/spacing_xs" />

            </LinearLayout>

            <!-- 第二行：设备名称 -->
            <TextView
                android:id="@+id/tvDeviceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="掘进机A1"
                android:textSize="@dimen/text_size_lg"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- 第三行：算法类型 -->
            <TextView
                android:id="@+id/tvAlgorithmType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="人员检测"
                android:textSize="@dimen/text_size_md"
                android:textColor="@color/text_secondary"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- 第四行：场景 -->
            <TextView
                android:id="@+id/tvScene"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="采煤工作面"
                android:textSize="@dimen/text_size_sm"
                android:textColor="@color/text_tertiary"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- 第五行：时间 -->
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:text="10-17 15:30"
                android:textSize="@dimen/text_size_xs"
                android:textColor="@color/text_quaternary" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
