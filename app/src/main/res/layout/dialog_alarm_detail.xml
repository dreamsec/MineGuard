<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:clipToPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        android:padding="@dimen/padding_md">

        <!-- 标题栏 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="报警详情"
            android:textSize="@dimen/text_size_xl"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_lg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 图片区域 -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_image_height"
            android:scaleType="centerCrop"
            android:background="@color/neutral_200"
            android:src="@drawable/placeholder"
            android:layout_marginBottom="@dimen/margin_lg"
            android:contentDescription="报警图片"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 基本信息区域 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/basic_info_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_lg"
            app:cardCornerRadius="@dimen/corner_radius_md"
            app:cardElevation="@dimen/card_elevation_xs"
            app:cardBackgroundColor="@color/neutral_50"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_md">

                <!-- 第一行：级别和状态 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/margin_sm">

                    <TextView
                        android:id="@+id/tvLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="严重"
                        android:textSize="@dimen/text_size_sm"
                        android:textColor="@color/error_600"
                        android:background="@drawable/bg_level_critical"
                        android:paddingHorizontal="@dimen/padding_sm"
                        android:paddingVertical="@dimen/spacing_xs" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未处理"
                        android:textSize="@dimen/text_size_sm"
                        android:textColor="@color/error_600"
                        android:background="@drawable/bg_status_unprocessed"
                        android:paddingHorizontal="@dimen/padding_sm"
                        android:paddingVertical="@dimen/spacing_xs" />

                </LinearLayout>

                <!-- 设备名称 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_sm">

                    <TextView
                        android:layout_width="@dimen/label_width"
                        android:layout_height="wrap_content"
                        android:text="设备名称:"
                        android:textSize="@dimen/text_size_sm"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvDeviceName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="掘进机A1"
                        android:textSize="@dimen/text_size_sm"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- 算法类型 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_sm">

                    <TextView
                        android:layout_width="@dimen/label_width"
                        android:layout_height="wrap_content"
                        android:text="算法类型:"
                        android:textSize="@dimen/text_size_sm"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvAlgorithmType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="人员检测"
                        android:textSize="@dimen/text_size_sm"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- 场景 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_sm">

                    <TextView
                        android:layout_width="@dimen/label_width"
                        android:layout_height="wrap_content"
                        android:text="场景:"
                        android:textSize="@dimen/text_size_sm"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvScene"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="采煤工作面"
                        android:textSize="@dimen/text_size_sm"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- 区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_sm">

                    <TextView
                        android:layout_width="@dimen/label_width"
                        android:layout_height="wrap_content"
                        android:text="区域:"
                        android:textSize="@dimen/text_size_sm"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvArea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="东区"
                        android:textSize="@dimen/text_size_sm"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- 报警时间 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/label_width"
                        android:layout_height="wrap_content"
                        android:text="报警时间:"
                        android:textSize="@dimen/text_size_sm"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2024-10-17 15:30:25"
                        android:textSize="@dimen/text_size_sm"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 处理信息区域 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/process_info_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_lg"
            app:cardCornerRadius="@dimen/corner_radius_md"
            app:cardElevation="@dimen/card_elevation_xs"
            app:cardBackgroundColor="@color/neutral_50"
            app:layout_constraintTop_toBottomOf="@+id/basic_info_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_md">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="处理信息"
                    android:textSize="@dimen/text_size_md"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_sm" />

                <!-- 已显示的处理信息 -->
                <TextView
                    android:id="@+id/tvProcessInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="已处理完成，设备运行正常"
                    android:textSize="@dimen/text_size_sm"
                    android:textColor="@color/text_secondary"
                    android:background="@color/surface"
                    android:padding="@dimen/padding_sm"
                    android:visibility="gone" />

                <!-- 输入处理信息 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilProcessInfo"
                    style="@style/Widget.MineGuard.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入处理信息..."
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etProcessInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/input_min_height"
                        android:gravity="top"
                        android:textSize="@dimen/text_size_sm" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- 处理人 -->
                <TextView
                    android:id="@+id/tvProcessor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="处理人: 张三"
                    android:textSize="@dimen/text_size_sm"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="@dimen/margin_sm"
                    android:visibility="gone" />

                <!-- 处理时间 -->
                <TextView
                    android:id="@+id/tvProcessTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="处理时间: 2024-10-17 16:00:00"
                    android:textSize="@dimen/text_size_sm"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 按钮区域 -->
        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/process_info_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                style="@style/Widget.MineGuard.Button"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:layout_weight="1"
                android:text="保存处理信息"
                android:textSize="@dimen/text_size_sm" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExport"
                style="@style/Widget.MineGuard.Button.Secondary"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_marginHorizontal="@dimen/spacing_xs"
                android:layout_weight="1"
                android:text="导出图片"
                android:textSize="@dimen/text_size_sm" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClose"
                style="@style/Widget.MineGuard.Button.Outline"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/spacing_sm"
                android:layout_weight="1"
                android:text="关闭"
                android:textSize="@dimen/text_size_sm" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
