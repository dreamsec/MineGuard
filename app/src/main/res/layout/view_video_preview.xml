<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_900">

    <!-- 视频纹理视图 -->
    <TextureView
        android:id="@+id/texture_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 占位符图片 -->
    <ImageView
        android:id="@+id/iv_placeholder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/placeholder"
        android:scaleType="centerCrop"
        android:alpha="0.7"
        android:background="@color/neutral_900"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 设备信息覆盖层 -->
    <LinearLayout
        android:id="@+id/device_info_overlay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_top"
        android:orientation="horizontal"
        android:padding="@dimen/padding_md"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备名称"
                style="@style/TextAppearance.MineGuard.Body"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_device_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="设备状态"
                style="@style/TextAppearance.MineGuard.Caption"
                android:textColor="@color/neutral_200" />

        </LinearLayout>

        <!-- 状态指示器 -->
        <View
            android:id="@+id/status_indicator"
            android:layout_width="@dimen/indicator_size"
            android:layout_height="@dimen/indicator_size"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_status_default" />

    </LinearLayout>

    <!-- 加载指示器 -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_loading"
        android:layout_width="@dimen/progress_size"
        android:layout_height="@dimen/progress_size"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/primary_600"
        app:trackColor="@color/neutral_700"
        app:indicatorSize="@dimen/progress_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
