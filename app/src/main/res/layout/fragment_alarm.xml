<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_50"
    android:fitsSystemWindows="false"
    tools:context=".alarm.AlarmFragment">

    <!-- 使用ConstraintLayout实现更好的响应式布局 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 搜索和筛选栏 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/search_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_md"
            android:layout_marginTop="@dimen/margin_md"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="@dimen/card_elevation_sm"
            app:cardBackgroundColor="@color/surface"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_md"
                android:gravity="center_vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_sm"
                    app:boxBackgroundColor="@color/surface_container"
                    app:boxCornerRadiusBottomEnd="@dimen/corner_radius_md"
                    app:boxCornerRadiusBottomStart="@dimen/corner_radius_md"
                    app:boxCornerRadiusTopEnd="@dimen/corner_radius_md"
                    app:boxCornerRadiusTopStart="@dimen/corner_radius_md"
                    app:boxStrokeColor="@color/border_light"
                    app:boxStrokeWidth="@dimen/spacing_xs"
                    app:hintEnabled="false"
                    app:startIconDrawable="@drawable/ic_search"
                    app:startIconTint="@color/text_tertiary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/searchView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_height"
                        android:hint="搜索报警信息..."
                        android:inputType="text"
                        android:textSize="@dimen/text_size_sm" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFilter"
                    style="@style/Widget.MineGuard.Button.Secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    android:text="筛选"
                    app:icon="@drawable/ic_filter_list"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClearFilter"
                    style="@style/Widget.MineGuard.Button.Text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height"
                    android:text="清空"
                    android:visibility="gone"
                    app:icon="@drawable/ic_clear"
                    app:iconGravity="textStart" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 报警列表 -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_md"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@+id/search_card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/margin_md"
                android:paddingVertical="@dimen/spacing_sm"
                android:clipToPadding="false"
                android:scrollbars="vertical"
                tools:listitem="@layout/item_alarm_card" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- 空状态提示 -->
        <LinearLayout
            android:id="@+id/layoutEmpty"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/padding_xl"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/search_card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="@dimen/icon_size_xl"
                android:layout_height="@dimen/icon_size_xl"
                android:src="@drawable/ic_alarm_empty"
                android:alpha="0.6"
                android:tint="@color/text_tertiary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_lg"
                android:text="暂无报警信息"
                style="@style/TextAppearance.MineGuard.Subtitle"
                android:textColor="@color/text_secondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:text="下拉刷新获取最新数据"
                style="@style/TextAppearance.MineGuard.Caption"
                android:textColor="@color/text_tertiary" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
