<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MineGuard" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_600</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_500</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/neutral_50</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_700</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <!-- Dialog theme -->
    <style name="DialogTheme" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="colorPrimary">@color/primary_600</item>
        <item name="colorSecondary">@color/secondary_500</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.MineGuard.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="rippleColor">@color/primary_100</item>
    </style>

    <style name="Widget.MineGuard.Card.Compact" parent="Widget.MineGuard.Card">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.MineGuard.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.MineGuard.Button.Primary" parent="Widget.MineGuard.Button">
        <item name="backgroundTint">@color/primary_600</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="rippleColor">@color/primary_700</item>
    </style>

    <style name="Widget.MineGuard.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
        <item name="strokeColor">@color/primary_600</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/primary_600</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="rippleColor">@color/primary_100</item>
    </style>

    <style name="Widget.MineGuard.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/primary_600</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="rippleColor">@color/primary_100</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.MineGuard.Headline" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextAppearance.MineGuard.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.MineGuard.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="TextAppearance.MineGuard.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.MineGuard.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
    </style>

    <style name="ThemeOverlay.MineGuard.BottomNavigation" parent="">
        <item name="colorPrimary">@color/primary_600</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_tertiary</item>
        <item name="colorSecondary">@color/secondary_500</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.MineGuard.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.MineGuard.Headline</item>
        <item name="android:background">@color/surface</item>
        <item name="android:elevation">4dp</item>
        <item name="titleTextColor">@color/text_primary</item>
    </style>

    <!-- Chip Style -->
    <style name="Widget.MineGuard.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">16dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/border_light</item>
        <item name="android:textAppearance">@style/TextAppearance.MineGuard.Caption</item>
        <item name="chipBackgroundColor">@color/surface_container</item>
    </style>

    <!-- Bottom Navigation Active Indicator -->
    <style name="Widget.MineGuard.BottomNavigation.ActiveIndicator" parent="">
        <item name="android:color">@color/primary_100</item>
        <item name="android:shape">oval</item>
    </style>

    <!-- Additional Button Styles -->
    <style name="Widget.MineGuard.Button.Outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
        <item name="strokeColor">@color/neutral_400</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">@color/neutral_200</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="Widget.MineGuard.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeColor">@color/primary_600</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/primary_600</item>
        <item name="android:textColorHint">@color/neutral_500</item>
        <item name="errorTextColor">@color/error_600</item>
        <item name="boxStrokeErrorColor">@color/error_600</item>
    </style>

    <!-- Time Span Chip Style -->
    <style name="Widget.MineGuard.TimeSpanChip" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingHorizontal">@dimen/padding_sm</item>
        <item name="android:paddingVertical">@dimen/padding_xs</item>
        <item name="cornerRadius">@dimen/corner_radius_sm</item>
        <item name="rippleColor">@color/primary_100</item>
    </style>

    <style name="Widget.MineGuard.TimeSpanChip.Selected">
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="backgroundTint">@color/primary_600</item>
        <item name="rippleColor">@color/primary_700</item>
    </style>
</resources>
