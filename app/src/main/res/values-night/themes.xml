<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MineGuard" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_200</item>
        <item name="colorOnPrimary">@color/primary_800</item>
        <item name="colorPrimaryContainer">@color/primary_900</item>
        <item name="colorOnPrimaryContainer">@color/primary_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/success_200</item>
        <item name="colorOnSecondary">@color/success_800</item>
        <item name="colorSecondaryContainer">@color/success_900</item>
        <item name="colorOnSecondaryContainer">@color/success_100</item>
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/neutral_900</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/neutral_900</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightNavigationBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>
</resources>
